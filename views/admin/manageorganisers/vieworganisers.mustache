                    <h3 class="card-title fw-semibold mb-3">{{lastname}}</h3>
                </div>
            </div>
                <div class="d-flex ">
                    <a href="/dashboard/manageorganiser/remove/{{_id}}" class="btn btn-outline-danger btn-sm">Remove Organiser</a>
                    
                </div>
            </div>
        </div>
        {{/organiser}}

    </div>
<div>

    {{^organiser}}
